<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Transaction History</title>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Love+Ya+Like+A+Sister&family=Signika+Negative:wght@500&display=swap" rel="stylesheet">

  <style>
    :root {
        --darkBrown-color: rgba(88, 25, 25, 0.801);
        --lightBrown-color: burlywood;
        --background-color: blanchedalmond;
    }
    
    * {
      margin: 0px;
      padding: 0px;

      font-family: 'Love Ya Like A Sister', cursive;

      
    }

    body {
      min-height: 90vh;

      background: var(--background-color);

      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }
    
    .container {
      height: fit-content;
      width: fit-content;
      min-width: 600px;
      max-width: 1500px;

      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .title,
    h1,
    p,
    .type {
      padding: 10px;
      color: var(--darkBrown-color);
    }
    .title {
      font-size: 56px;
      margin-bottom: 40px;
      text-shadow: 0 0 10px rgba(0, 0, 0, 0.275);
    }
    .type {
      margin: 0px 10px;;

      font-weight: bold;
      font-size: 24px;
    }

    .ability {
      font-size: 20px;
    }
    
    .border__imitation {
      width: fit-content;
      height: fit-content;

      border: 20px solid var(--darkBrown-color);
      border-radius: 25px;
      background-color: rgba(88, 25, 25, 701);
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.275);
    }

    .card {
      width: 300px;
      height: 468px;

      background-color: var(--lightBrown-color);
      border-radius: 15px;

      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    .description,
    .image__container,
    .bottom__container {
      width: 100%;
      height: fit-content;

      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    .bottom__container {
      height: 100px;

      display: flex;
      flex-direction: row;
      justify-content: space-between;
      align-items: end;
    }

    .flexH {
      max-width: 1500px;
      min-width: 100px;
      height: fit-content;

      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: center;
      align-items: center;
      gap: 40px;
    }

    .flexV {
      width: 100%;

      display: flex;
      flex-direction: column;
      justify-content: space-between;  
    }
  </style>
</head>
<body>
  <div class="container">
    <h1 class="title">üßù Races List üßù‚Äç‚ôÄÔ∏è</h1>

    <div class="flexH">
      <% console.log(races); %>
      <% races.forEach((race) => { %>
      <div class="border__imitation">
        <div class="card">
          <div class="description">
            <h1 class="card__title"> <%= race.name %> </h1>
         
            <% if(race.ability !== "Null") { %>
              <p class="ability"> <%= race.ability %> </p>
            <% } %>
          </div>

          <!-- will be done after image db problems -->
          <% if(race.image === "Null") { %>
            <img src="#" alt="<%= race.image%> ">
          <% } else { %>
            <img src="#" alt="<%= race.image%> ">
          <% } %>

          <div class="bottom__container">
            <div class="left__container">
              <p class="type"> <%= race.type %></p>
            </div>

            <div class="right__container">
              <p class="type"> Race </p>
            </div>
          </div>
        </div>
      </div>
      <% }) %>
      </div>
    </div>
  </div>
</body>
</html>


